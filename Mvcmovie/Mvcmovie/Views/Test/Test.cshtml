
@{
    ViewBag.Title = "Index";
}

<h2>新加入的網頁</h2>
<h3> 代辦事項列表 @ViewBag.Title</h3>

<table class="title" border='2' id='listtxt'>
    <thead>
        <tr scope='col'>
            <td></td>
            <td> 確認<br />完成  </td>
            <td> 項目           </td>
            <td id='note'> 備註 </td>
            <td> 完成日期       </td>
            <td> 修改、刪除     </td>
        </tr>
    </thead>
    <tbody id='dataT1'>
        <tr scope='row' id='dataR1'>
            <td id='num1'>1</td>
            <td><input type='checkbox' value='完成' /> </td>
            <td id='item1'></td>
            <td id='note1'></td>
            <td id='oday1'></td>
            <td>
                <input type="button" value='修改' id='Abtn1' />
                <input type="button" value='刪除' id='Bbtn1' />
            </td>
        </tr>
    </tbody>
</table>

<form action="" method="get">
    <div class='insert'>
        <fieldset>
            <legend>
                新增一個待辦事項項目!
            </legend>
            <label>
                項目 : <br />
                <input type="text" name='itemtxt' id='itemtxt' />
            </label>
            <br />
            <label>
                完成時間 : <br />
                <input type="date" name='timetxt' id='datetxt' />
            </label>
            <br />
            <label>
                備註 : <br />
                <textarea name='texttxt' placeholder="輸入事項備註....." id='text'></textarea>
            </label>
            <br />
            <input type="submit" value="確認送出" id='addbtn'>
            <legend>
            </legend>
        </fieldset>
    </div>
</form>




